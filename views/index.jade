    #section3.section
      .container
        h1 Play
        p A bunch of random and cool fun stuff that I host on this site.
        hr
        .cardStand
          each project in projects
            if project.type === "play"
              .cardWrapper
                a(data-toggle="modal" data-target= ("#projectModal"+project._id))
                  .card.clickable.lg-clickable
                    h3= project.name
                    img.img-responsive(src= project.imgURL)
                    p= project.shortDesc
                .modal.fade(role='dialog' id= ("projectModal"+project._id))
                  .modal-dialog
                    .modal-content
                      .modal-header
                        button.close(type='button', data-dismiss='modal') Ã—
                        h4.modal-title= project.name
                      .modal-body
                        img.img-responsive.text-center(src= project.imgURL)
                        p= project.longDesc
                      .modal-footer
                        a.btn.btn-success(target="_blank", href= project.URL) Try it out
                        button.btn.btn-default(type='button', data-dismiss='modal') Close

